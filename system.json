{
  "id": "arkham-horror",
  "title": "Arkham Horror, the Roleplaying Game",
  "description": "FoundryVTT module for Arkham Horror RPG, based on the DPS system.",
  "version": "1.0.0",
  "compatibility": {
    "minimum": 12,
    "verified": 12
  },
  "authors": [{
    "name": "offendo",
    "discord": "offendo"
  }],
  "esmodules": ["mysystem.mjs"],
  "styles": ["styles/arkham-styles.css"],
  "packs": [
    {
      "name": "enemies",
      "label": "Enemies",
      "type": "Actor"
    },
    {
      "name": "items",
      "label": "Items",
      "type": "Item"
    }
  ],
  "documentTypes": {
    "Actor": {
      "investigator": {
        "htmlFields": ["biography", "name"],
        "filePathFields": {
          "profile": ["IMAGE"]
        }
      },
      "villain": {
        "htmlFields": ["biography", "name"]
      }
    },
    "Item": {
      "weapon": {},
      "spell": {}
    }
  },
  "socket": false,
  "initiative": "1d20",
  "grid": {
    "distance": 5,
    "units": "ft"
  },
  "primaryTokenAttribute": "resources.dicePool",
  "secondaryTokenAttribute": "resources.dicePoolLimit",
  "url": "https://github.com/offendo/arkham-horror",
  "manifest": "https://raw.githubusercontent.com/offendo/arkham-horror/refs/heads/main/system.json",
  "download": ""
}
